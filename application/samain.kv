        Button:
            id: avail_btn
            text: "Availability"
            size_hint: 0.2,0.1
            pos_hint: {'x': 0.4, 'top':0.97 }
            background_color: (1.0, 0.0, 0.0, 1.0)
            on_press: root.set_course_avail_state()	
        Button:
            id: times_btn
            text: "Times"
            size_hint: 0.2,0.1
            pos_hint: {'x': 0.6, 'top':0.97}
            background_color: (1.0, 0.0, 0.0, 1.0)
            on_press: root.set_course_times_state()            
        Button:
            id: desc_btn
            text: "Descriptions"
            size_hint: 0.2,0.1
            pos_hint: {'x': 0.8, 'top':0.97}
            background_color: (1.0, 0.0, 0.0, 1.0)
            on_press: root.set_course_desc_state()
        BoxLayout:
            canvas:
                Color:
                    rgb: (0.6,0.6,0.6)
                Rectangle:
                    size: self.size
                    pos: self.pos
            orientation: 'horizontal'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.85}
            height: 7
            width: 5000
                    
        BoxLayout:
            id: crs_srch_box
            height: "40dp"
            width: "1dp"
            size_hint_y: None
            pos_hint: {'x': 0, 'top':0.83}
            orientation: 'horizontal'
            Label:
                id: crs_srch_lbl
                size_hint_x: 8
                text: 'Department:'
                color: (0,0,0,1)
            TextInput:
                id: crs_srch_txtin
                size_hint_x: 10
                focus: True
                multiline: False
                text: 'ex. SSW555'
            Button:
                id: crs_go_btn
                text: "Go"
                size_hint_x: 8
                background_color: (1.0, 0.0, 0.0, 1.0)
                on_press: root.go_btn_handler()
            Button:
                id: crs_reset_btn
                text: "Reset"
                size_hint_x: 8
                background_color: (1.0, 0.0, 0.0, 1.0)
                on_press: root.reset_crs_srch_box()
        BoxLayout:
            canvas:
                Color:
                    rgb: (0.6,0.6,0.6)
